generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    String    @id @default(cuid())
  createdAt DateTime @default(now())
  email  String @unique
  password String
  isAdmin Boolean @default(false)
  status Boolean @default(false)
  Book Book[]
}


model Category {
  id    String    @id @default(cuid())
  name  String @unique
  books Book[]
}

model Book {
  id         String       @id @default(cuid())
  createdAt DateTime @default(now())
  author     String
  bookNumber String
  bookName      String
  bookCover String
  price Decimal
  ownerId String 
  categoryId String
  user   User  @relation(fields: [ownerId], references: [id])
  category   Category  @relation(fields: [categoryId], references: [id])
}

model Order {
  id String @id @default(cuid())
  createdAt DateTime @default(now())
  price Decimal
  books Json[]
  status String
}